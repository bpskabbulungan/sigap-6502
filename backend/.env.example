# ===== Server =====
PORT=3301
WEB_APP_URL=http://localhost:3302
TIMEZONE=Asia/Makassar

# ===== Admin Authentication =====
ADMIN_USERNAME=admin
# Pilih salah satu dari dua opsi berikut:
ADMIN_PASSWORD=change_me            # untuk pengembangan lokal
# ADMIN_PASSWORD_HASH=               # hash bcrypt untuk produksi

# SECRET WAJIB diisi untuk session dan JWT
SESSION_SECRET=generate_a_long_random_value_min_16_chars

# ===== API Access Control =====
CONTROL_API_KEY=replace_with_api_key
# Optional: force a specific WhatsApp Web build (fallback uses cached latest)
# WA_WEB_VERSION=2.3000.1031070696-alpha

# ===== Google API =====
GOOGLE_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob
GOOGLE_TOKEN_PATH=./config/calendar_token.json
GOOGLE_CREDENTIALS_PATH=./config/calendar_oauth.json

# ===== Spreadsheet =====
SPREADSHEET_ID=isi_jika_menggunakan_google_sheet
SPREADSHEET_RANGE=Sheet1!A2:C

# ===== Scheduler Tweaks =====
SCHEDULER_RETRY_INTERVAL_MS=60000
SCHEDULER_MAX_RETRIES=3

# ===== Socket / CORS Allowed Origins =====
SOCKET_ALLOWED_ORIGINS=http://localhost:5174,http://localhost:3301,http://localhost:3302
